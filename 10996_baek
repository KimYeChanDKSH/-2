#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a, i, j;
    scanf("%d", &a);
    for(i = 0; i <= 2 * a - 1; i++)
    {
        for(j = 0; j <= a - 1; j++)
        {
            if(i % 2 == 0)
            {
                if(j % 2 == 0) printf("*");
                else printf(" ");
            }
            else
            {
                if(j % 2 == 0) printf(" ");
                else printf("*");
            }
        }
        printf("\n");
    }
    return 0;
}
